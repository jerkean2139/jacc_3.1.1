# JACC Environment Configuration
# Copy this file to .env and fill in your actual values

# === CRITICAL SECURITY SETTINGS ===
# Generate a secure 64-character random string for session secret
# Use: openssl rand -hex 32
SESSION_SECRET=your_secure_session_secret_here_32_plus_characters

# Node environment
NODE_ENV=development

# === DATABASE CONFIGURATION ===
# PostgreSQL database connection string
DATABASE_URL=your_database_url_here
PGDATABASE=your_db_name
PGHOST=your_db_host
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password

# === AI SERVICE API KEYS ===
# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=your_pinecone_index_name

# === OPTIONAL INTEGRATIONS ===
# Google Services (for document sync)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=your_google_redirect_uri

# SendGrid (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key

# === SECURITY SETTINGS ===
# Production domain settings (CRITICAL for CORS security)
PRODUCTION_DOMAIN=https://your-production-domain.com
ISO_HUB_DOMAIN=https://your-iso-hub-domain.com

# API Keys for system access
ADMIN_API_KEY=generate_secure_32_char_key_here
CLIENT_API_KEY=generate_secure_32_char_key_here
SYSTEM_API_KEY=generate_secure_32_char_key_here

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === DEVELOPMENT SETTINGS ===
# Replit specific (auto-detected in Replit environment)
REPLIT_DOMAINS=*.replit.app,*.replit.dev,*.replit.co
REPL_ID=auto_detected