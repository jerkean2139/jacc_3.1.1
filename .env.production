# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration - REPLACE WITH YOUR PRODUCTION DATABASE
DATABASE_URL="postgresql://your_production_db_user:your_production_db_password@your_production_db_host/your_production_db_name?sslmode=require"
PGDATABASE="your_production_db_name"
PGHOST="your_production_db_host"
PGPORT="5432"
PGUSER="your_production_db_user"
PGPASSWORD="your_production_db_password"

# Session Security - GENERATE A NEW SECRET FOR PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
SESSION_SECRET="GENERATE_A_NEW_SECURE_SESSION_SECRET_DO_NOT_USE_THIS_DEFAULT"

# AI Service API Keys - USE YOUR PRODUCTION KEYS
ANTHROPIC_API_KEY="your_production_anthropic_key"
OPENAI_API_KEY="your_production_openai_key"

# Pinecone Vector Database - USE YOUR PRODUCTION KEYS
PINECONE_API_KEY="your_production_pinecone_key"
PINECONE_ENVIRONMENT="us-east-1"
PINECONE_INDEX_NAME="merchant-docs-v3"

# Production Domain Configuration
PRODUCTION_DOMAIN="https://jacc-keanonbiz.replit.app"
ISO_HUB_DOMAIN="https://iso-hub-domain.com"

# Optional: Email Configuration (if using SendGrid)
SENDGRID_API_KEY="your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"

# Memory Limits (optional)
NODE_OPTIONS="--max-old-space-size=4096"

# CORS Settings
CORS_MAX_AGE="86400"

# File Upload Limits
MAX_FILE_SIZE="10485760"

# Add these to your existing .env file
GOOGLE_CLIENT_ID="optional-not-configured"
GOOGLE_CLIENT_SECRET="optional-not-configured"
OAUTH_ENABLED="false"